<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color">
    
    <TextView 
        android:id="@+id/title_add_newfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/andrlist_add_newfriend"
        android:textSize="@dimen/addrlist_add_newfriend"
        android:textColor="@color/addrlist_add_newfriend"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_content_margin_left"/>

	<View 
        android:layout_width="@dimen/line_width"
        android:layout_height="match_parent"
        android:background="@color/tilte_line_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/addrlist_add_newfriend_marginright"
        android:layout_marginTop="@dimen/title_line_margin_top_bottom"
        android:layout_marginBottom="@dimen/title_line_margin_top_bottom"/>
    
</RelativeLayout>
