<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_cajiansetting_detail_item_block_height"
    android:background="@drawable/main_ui_listitem_bg">
    
    <ImageView 
        android:id="@+id/user_data_image"
        android:contentDescription="@null"
        android:layout_width="@dimen/setting_cajiansetting_detail_item_image_width"
        android:layout_height="@dimen/setting_cajiansetting_detail_item_image_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/newer_gude1"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/setting_cajiansetting_detail_item_margin_left"
        android:layout_marginTop="@dimen/setting_cajiansetting_detail_item_margin_top"
        android:layout_marginRight="@dimen/setting_cajiansetting_detail_item_margin_left"
        android:layout_marginBottom="@dimen/setting_cajiansetting_detail_item_margin_top"/>

    <TextView 
        android:id="@+id/user_data_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/setting_cajiansetting_item_name"
        android:textColor="@color/setting_user_name"
        android:textSize="@dimen/setting_cajiansetting_item_name_size"
        android:layout_toRightOf="@id/user_data_image"/>
    
    <TextView 
        android:id="@+id/user_data_button"
        android:layout_width="@dimen/setting_cajiansetting_item_button_width"
        android:layout_height="@dimen/setting_cajiansetting_item_button_height"
        android:text="@string/setting_cajiansetting_item_button_name"
        android:textColor="@color/setting_user_cajiansetting_item_name"
        android:textSize="@dimen/setting_cajiansetting_item_button_textsize"
        android:background="@drawable/setting_user_cajian_item_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/setting_cajiansetting_item_button_margin_right"/>
    
</RelativeLayout>
