<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/dialog_phone_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_confirm_text_margin_top"
        android:layout_marginLeft="@dimen/dialog_confirm_text_margin_left"
        android:text="@string/dialog_confirm_phone_text"
        android:textColor="@color/dialog_confirm_cancel_color"
        android:textSize="@dimen/dialog_confirm_text_size"/>

    <TextView 
        android:id="@+id/dialog_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:text="@string/dialog_confirm_phone"
		android:gravity="center_vertical"
        android:textColor="@color/dialog_confirm_cancel_color"
        android:textSize="@dimen/dialog_confirm_text_size"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dialog_confirm_text_margin_top"/>
    
</RelativeLayout>
