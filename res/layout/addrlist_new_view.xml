<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_content_textcolor">
    
	<include 
		android:id="@+id/addrlist_new_title"
        layout="@layout/title_view"/>

	<ListView 
	    android:id="@+id/addrlist_new_listview"
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent"  
	    android:layout_below="@id/addrlist_new_title"
	    android:cacheColorHint="@android:color/transparent"
        android:listSelector="@drawable/main_ui_listitem_bg"
        android:dividerHeight="1px"
        android:divider="@color/main_ui_line_color"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollFooter="@null"
        android:scrollbars="none" />
	
	<include
	    android:id="@+id/addrlist_empty_new_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/addrlist_new_title"
	    android:visibility="gone"
	    layout="@layout/addrlist_header_item_nodata"/>
	
</RelativeLayout>
