<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">
    
    <include 
        android:id="@+id/setting_yuanfen_title"
        layout="@layout/title_view"
        android:layout_alignParentTop="true"/>
    
    <RelativeLayout 
        android:id="@+id/setting_yuanfen_first_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_yuanfen_first_block_height"
        android:layout_below="@id/setting_yuanfen_title"
		android:layout_marginTop="@dimen/setting_cajiansetting_block_margin_top"
        android:background="@android:color/white">
        <TextView 
            android:id="@+id/setting_yuanfen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_yuanfen_firstblock_text"
            android:textColor="@color/setting_usr_cajianstting_text"
            android:textSize="@dimen/setting_about_block_text_size"
            android:layout_marginLeft="@dimen/setting_yuanfen_margin_left"
            android:layout_marginTop="@dimen/setting_yuanfen_margin_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_yuanfen_second_text"
            android:textSize="@dimen/setting_about_shengming_text"
            android:textColor="@color/setting_user_gexing"
            android:layout_marginLeft="@dimen/setting_yuanfen_margin_left"
            android:layout_marginRight="@dimen/setting_yuanfen_margin_left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/setting_yuanfen_margin_bottom"/>
		<CheckBox 
		    android:id="@+id/setting_yuanfen_first_checkbox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   	android:layout_alignParentRight="true"
		   	android:layout_alignParentTop="true"
		   	android:scaleX="0.8"
		   	android:scaleY="0.8"
			android:button="@drawable/setting_user_checkbox_bg"
		   	android:layout_marginTop="@dimen/setting_yuanfen_checkbox_margintop"
		   	android:layout_marginRight="@dimen/setting_yuanfen_checkbox_marginright"/>    
		<TextView 
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="@dimen/setting_content_line_padding_left_right"
			android:layout_marginRight="@dimen/setting_content_line_padding_left_right"
			android:layout_alignParentBottom="true"
			android:background="@color/main_ui_line_color"/>
	</RelativeLayout>

	<RelativeLayout 
		android:id="@+id/setting_yuanfen_second_block"
		android:layout_width="match_parent"
		android:layout_height="@dimen/setting_notification_newmsg_block_height"
		android:layout_below="@id/setting_yuanfen_first_block"
		android:background="@drawable/main_ui_listitem_bg">
		<TextView 
		    android:id="@+id/setting_yuanfen_text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/setting_user_name"
			android:textSize="@dimen/setting_user_name_size"
			android:text="@string/setting_yuanfen_second_block_text"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="@dimen/setting_notification_newmsg_margin_top"
			android:layout_marginLeft="@dimen/setting_user_image_text_margin_left"/>
		<TextView 
			android:id="@+id/setting_newmsg_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/setting_yuanfen_second_block_text2"
			android:textColor="@color/setting_user_gexing"
			android:textSize="@dimen/setting_user_text_size"
			android:layout_marginRight="@dimen/setting_user_image_text_margin_left"
			android:layout_marginLeft="@dimen/setting_user_image_text_margin_left"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:layout_marginBottom="@dimen/setting_notification_newmsg_margin_bottom"/>
		<CheckBox 
		    android:id="@+id/setting_newmsg_checkbox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:scaleX="0.8"
			android:scaleY="0.8"
		   	android:button="@drawable/setting_user_checkbox_bg"
			android:layout_marginTop="@dimen/setting_notification_checkbox_margin_top"
			android:layout_marginRight="@dimen/setting_notification_checkbox_margin_right"/>
	</RelativeLayout>
    
 	<RelativeLayout 
        android:id="@+id/setting_yuanfen_third_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_cajiansetting_middle_block_height"
        android:layout_marginTop="@dimen/setting_cajiansetting_block_margin_top"
        android:layout_below="@id/setting_yuanfen_second_block"
        android:background="@drawable/main_ui_listitem_bg">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_cajiansetting_text_margin_left"
            android:text="@string/setting_yuanfen_third_text"
            android:textColor="@color/setting_usr_cajianstting_text"
            android:textSize="@dimen/setting_cajiansetting_text_size"/>
		<TextView 
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="@dimen/setting_content_line_padding_left_right"
			android:layout_marginRight="@dimen/setting_content_line_padding_left_right"
			android:layout_alignParentBottom="true"
			android:background="@color/main_ui_line_color"/>
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/setting_yuanfen_fourth_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_cajiansetting_middle_block_height"
        android:layout_below="@id/setting_yuanfen_third_block"
        android:background="@drawable/main_ui_listitem_bg">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_cajiansetting_text_margin_left"
            android:text="@string/setting_yuanfen_fourth_text"
            android:textColor="@color/setting_usr_cajianstting_text"
            android:textSize="@dimen/setting_cajiansetting_text_size"/>
    </RelativeLayout>
	
</RelativeLayout>
