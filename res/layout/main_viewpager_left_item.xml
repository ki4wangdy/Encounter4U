<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView 
        android:id="@+id/detail_viewpager_left_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/detail_viewpager_left_height"
        android:layout_marginLeft="@dimen/dteail_viewpager_left_time_margin_left"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="@string/detail_viewpager_time"
        android:textColor="@color/detail_viewpager_left_textcolor"
        android:textSize="@dimen/detail_viewpager_text_size"/>
    
    <TextView 
        android:id="@+id/detail_viewpager_left_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/detail_viewpager_left_height"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dteail_viewpager_left_time_margin_left"
        android:text="@string/detail_viewpager_left_count"
        android:textColor="@color/detail_middle_textcolor"
        android:textSize="@dimen/detail_viewpager_text_size"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/detail_viewpager_line_margin_left_right"
        android:layout_marginRight="@dimen/detail_viewpager_line_margin_left_right"
        android:layout_below="@id/detail_viewpager_left_time"
        android:background="@color/detail_viewpager_line"/>
    
</RelativeLayout>
