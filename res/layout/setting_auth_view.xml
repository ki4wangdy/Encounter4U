<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView 
	        android:id="@+id/setting_default_userlogo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@null"
	        android:layout_centerInParent="true"
	        android:src="@drawable/setting_default_userlogo"/>
	
	    <TextView 
	        android:id="@+id/setting_default_text1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/setting_default_userlogo"
	        android:layout_marginTop="@dimen/setting_auth_text_margintop"
	        android:layout_centerHorizontal="true"
	        android:text="@string/setting_auth_type1_text1"
	        android:textColor="@color/setting_auth_text_color"
	        android:textSize="@dimen/setting_auth_logo_text"/>
	
	    <TextView 
	        android:id="@+id/setting_default_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/setting_default_text1"
	        android:layout_marginTop="@dimen/setting_auth_text2_margintop"
	        android:layout_centerHorizontal="true"
	        android:text="@string/setting_auth_type1_text2"
	        android:textColor="@color/setting_auth_text_color"
	        android:textSize="@dimen/setting_auth_logo_text"/>
    
</RelativeLayout>
